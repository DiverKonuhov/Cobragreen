<Page x:Class="Cobragreen.Page3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cobragreen"
        mc:Ignorable="d"
        d:DesignHeight="1080" d:DesignWidth="1920"
        Title="Page3">
    <Grid>
        <Image Source="Images/backgroundDef.jpg" 
               Stretch="UniformToFill" 
               HorizontalAlignment="Stretch" 
               VerticalAlignment="Stretch" Panel.ZIndex="-1">
        </Image>
        <TextBox Name="textBox" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" TextWrapping="Wrap" HorizontalAlignment="Center"  VerticalAlignment="Top"/>
        <!-- <Button Content="Open .jbb File" Click="OpenFile_Click" HorizontalAlignment="Left" VerticalAlignment="Top"/> -->
        <!-- <TextBlock FontSize="35" VerticalAlignment="Center" HorizontalAlignment="Center">Page3</TextBlock> -->
        <Button Content="Open .jbb File" Click="OpenFile_Click" Height="35" MinWidth="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,5,5,5">
                <Button.Background>
                    <ImageBrush ImageSource="Images/ButtonTest1.png" Stretch="UniformToFill"/>
                </Button.Background>
            </Button>
    </Grid>
</Page>